{
  "manifest_version": 2,
  "name": "Followed By",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["https://github.com/*", "https://github.com/*?tab=*"],
      "exclude_matches": ["https://github.com/*/*", "https://github.com/"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage"],
  "background": { "scripts": [ "background.js" ], "persistent": false },
  "web_accessible_resources": [
      "src/app.js",
      "src/utils/api.js",
      "src/utils/storage.js",
      "src/utils/aggregators.js",
      "src/utils/views.js"
  ] 
}